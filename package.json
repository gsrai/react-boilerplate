{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "My custom react boilerplate, less time setting up and more time developing.",
  "scripts": {
    "start": "NODE_ENV=production node index.js",
    "dev": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production --config webpack.config.prod.js",
    "test": "rm -rf coverage; jest --coverage --config=jest.config.json",
    "test:watch": "jest --watch --coverage --config=jest.config.json",
    "lint": "eslint src",
    "nuke": "rm -rf node_modules && npm run clean",
    "precommit": "yarn run lint && yarn run test",
    "docker:build": "docker build -t app-ui .",
    "docker:start": "docker run -it -p 8080:8080 --name app-ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsrai/react-boilerplate.git"
  },
  "keywords": [],
  "author": "Gagondeep Srai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gsrai/react-boilerplate/issues"
  },
  "homepage": "https://github.com/gsrai/react-boilerplate#readme",
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "space-before-function-paren": [2, {
        "anonymous": "always",
        "named": "ignore",
        "asyncArrow": "always"
      }]
    },
    "env": { "jest": true }
  },
  "eslintIgnore": [
    "dist"
  ],
  "dependencies": {
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "prop-types": "^15.6.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-plugin-standard": "^3.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "raf": "^3.4.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
